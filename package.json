{
  "name": "k8-keystone",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Monorepo orchestrator for Kollabor8â€™s AI + MERN + WP stack",
  "workspaces": [
    "client",
    "server",
    "ai-core",
    "wp-plugin"
  ],
  "scripts": {
    "dev": "concurrently -n client,server,ai-core \"pnpm --filter client dev\" \"pnpm --filter server dev\" \"pnpm --filter ai-core dev\"",
    "build": "pnpm -r run build",
    "lint": "pnpm -r run lint",
    "clean": "rimraf node_modules && pnpm -r exec rimraf node_modules dist",
    "docker:up": "docker-compose -f deploy/docker-compose.yml up --build",
    "docker:down": "docker-compose -f deploy/docker-compose.yml down"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/pdfkit": "^0.17.3",
    "@types/react": "^19.2.3",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "concurrently": "^9.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.5.0",
    "rimraf": "^6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "dotenv": "^17.2.3",
    "pdfkit": "^0.17.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  }
}